@model ShoppingApp.Models.Item

@{
    ViewBag.Title = "Product - "+Model.Title;
}

<h2>Product Details: </h2>
<div>
    <img alt="@Model.Title" src="@Model.ItemArtUrl"/>
</div>
<div id=" item-details">
    <p>
        <em>Category:</em>
        @Model.Category.cat_name
    </p>

    <p>
        <em>Seller: </em>
        @Model.Owner.Name
    </p>
    <p>
        <em>price: </em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p>
        @Html.ActionLink("Add to cart", "AddToCart", "Cart", new { id = Model.ItemId }, "")
    </p>
    <div class="fb-comments" data-width="230" data-numposts="5"></div>

</div>

